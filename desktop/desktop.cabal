name: desktop
version: 0.1
cabal-version: >= 1.8
build-type: Simple

library
  hs-source-dirs: src
  build-depends:
      base
    , backend
    , common
    , frontend

    , aeson
    , async
    , base16-bytestring
    , bimap
    , bytestring
    , cardano-crypto
    , containers
    , cryptonite
    , directory
    , filepath
    , jsaddle
    , jsaddle-wkwebview
    , lens
    , memory
    , mtl
    , network
    , obelisk-executable-config-lookup
    , obelisk-backend
    , obelisk-frontend
    , obelisk-generated-static
    , obelisk-route
    , process
    , raw-strings-qq
    , reflex-dom
    , reflex-dom-core
    , servant
    , servant-server
    , snap-server
    , text
    , wai-cors
    , warp
  exposed-modules:
      Desktop
    , Desktop.Frontend
    , Desktop.Mac
    , Desktop.Orphans
    , Desktop.Setup
  ghc-options: -Wall

executable macApp
  main-is: main.hs
  hs-source-dirs: mac
  if !os(darwin) || impl(ghcjs)
    buildable: False
  build-depends:
      base
    , desktop
  ghc-options:
    -threaded -O -Wall

  frameworks: Cocoa, Foundation, WebKit

  c-sources: mac/cbits/mac.m
  cpp-options: -DUSE_COCOA
  cc-options: -Werror=objc-method-access
